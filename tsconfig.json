{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "sourceMap": true,
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxFactory": "h",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true
    // "types": ["jest-playwright-preset", "expect-playwright"]
  },
  "files": [
    "node_modules/jest-playwright-preset/types/global.d.ts",
    "node_modules/expect-playwright/global.d.ts",
    "node_modules/jest-screenshot/index.d.ts"
  ],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "src/__tests__/index.js"]
}
